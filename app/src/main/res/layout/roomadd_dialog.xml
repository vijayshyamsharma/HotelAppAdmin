<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/roomaddimage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"


         />

    <TextView
        android:id="@+id/addimagetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:textSize="20sp"/>



    <LinearLayout
        android:id="@+id/firstlinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/roomaddimage"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="10dp">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/roomnumberadd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="room number"

            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            app:hintTextColor="@color/colorPrimary"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/roomnumberaddval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:inputType="none"
                android:textSize="16sp"
                />



        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/roomcapcityadd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="room capacity"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"


            app:hintTextColor="@color/colorPrimary"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/roomcapcityaddval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:inputType="numberDecimal"
                android:textSize="16sp"
                />



        </com.google.android.material.textfield.TextInputLayout>





    </LinearLayout>


    <LinearLayout
        android:id="@+id/secondlinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstlinear"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="10dp">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/roomtypeadd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="room type"

            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            app:hintTextColor="@color/colorPrimary"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/roomtypeaddval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:inputType="none"
                android:textSize="16sp"
                />



        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/roompriceadd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="room price"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"


            app:hintTextColor="@color/colorPrimary"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/roompriceaddval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:inputType="numberDecimal"
                android:textSize="16sp"

                />



        </com.google.android.material.textfield.TextInputLayout>





    </LinearLayout>





    <LinearLayout
        android:id="@+id/thirdlinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/secondlinear"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="10dp">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/roomcheckinadd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="checkin dd/mm/yyyy"

            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            app:hintTextColor="@color/colorPrimary"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/roomcheckinaddval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:inputType="none"
                android:textSize="16sp"
                />



        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/roomcheckoutadd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="checkout dd/mm/yyyy"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"


            app:hintTextColor="@color/colorPrimary"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/roomcheckoutaddval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:inputType="numberDecimal"
                android:textSize="16sp"

                />



        </com.google.android.material.textfield.TextInputLayout>





    </LinearLayout>

    <TextView
        android:id="@+id/dateadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/thirdlinear"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:textSize="12sp"/>





</androidx.constraintlayout.widget.ConstraintLayout>