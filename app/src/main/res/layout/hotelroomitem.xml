<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="16dp"

    >



    <androidx.cardview.widget.CardView
        android:id="@+id/itemcardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:elevation="4dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/colorPrimary"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            >







            <ImageView
                android:id="@+id/roomimage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/roomname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="room no. 128"
                android:textColor="@color/white"
                android:textSize="16sp"

                app:layout_constraintTop_toBottomOf="@id/roomimage"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"


                />

            <TextView
                android:id="@+id/roomtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="room- type: deluxe"
                android:textColor="@color/white"
                android:textSize="16sp"

                app:layout_constraintTop_toBottomOf="@id/roomname"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"





                />


            <TextView
                android:id="@+id/roomcapcity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="capacity: 2"
                android:textColor="@color/white"
                android:textSize="16sp"

                app:layout_constraintTop_toBottomOf="@id/roomimage"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="4dp"



                />

            <TextView
                android:id="@+id/roomprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="price: 128"
                android:textColor="@color/white"
                android:textSize="16sp"

                app:layout_constraintTop_toBottomOf="@id/roomcapcity"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="4dp"






                />

            <TextView
                android:id="@+id/roomavailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textColor="@color/white"
                android:textSize="16sp"


                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@id/checkoutdateav"




                />
            <TextView
                android:id="@+id/checkindateav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="check-in: dd:mm:yyyy"
                android:textColor="@color/white"
                android:textSize="16sp"


                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@id/roomtype"




                />

            <TextView
                android:id="@+id/checkoutdateav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="check-out: dd:mm:yyyy"
                android:textColor="@color/white"
                android:textSize="16sp"


                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@id/checkindateav"




                />


            <TextView
                android:id="@+id/postedon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="posted on-----"
                android:textColor="@color/white"
                android:textSize="16sp"


                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/roomavailable"

                />

            <Button
                android:id="@+id/bookbtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="Book"
                android:backgroundTint="@color/colorPrimaryDark"
                app:layout_constraintTop_toBottomOf="@id/postedon"
                app:layout_constraintBottom_toBottomOf="parent"/>

















        </androidx.constraintlayout.widget.ConstraintLayout>















    </androidx.cardview.widget.CardView>

</LinearLayout>